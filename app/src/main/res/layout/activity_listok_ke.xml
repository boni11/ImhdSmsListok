<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.imhdsmslistok.Listok">

    <LinearLayout
        android:id="@+id/nazov_mesta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:text="KOŠICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <LinearLayout
        android:layout_below="@+id/nazov_mesta"
        android:id="@+id/listok_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 – minútový cestovný lístok"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="7dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prázdna SMS odoslaná na skrátené číslo 1166.
Cena SMS lístka (spätnej SMS) na skrátené číslo 1166:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ee0000"
            android:layout_marginTop="8dp"
            android:text="Cena SMS: 0,80 € s DPH" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/listok_info">

        <Button
            android:id="@+id/button_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_posli_sms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Poslať SMS"
            android:background="@android:color/transparent"
            android:textStyle="bold"/>


    </LinearLayout>

</RelativeLayout>
