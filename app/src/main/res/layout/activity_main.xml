<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/layout_mesto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/buttons_vyber_mesta"
        >

        <ImageView
            android:id="@+id/image_bus_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/bus_head2"
            android:scaleType="centerCrop"
            />
        <!---
        <TextView
            android:text="Vyber si svoje mesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>
            -->

    </LinearLayout>



    <TableLayout
        android:id="@+id/buttons_vyber_mesta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:stretchColumns="1"
        android:background="@color/bg1">

        <TableRow>
            <Button
                android:id="@+id/ba"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Bratislava"
                android:layout_margin="2dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"
                />

            <Button
                android:id="@+id/ke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Košice"
                android:layout_margin="2dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"/>

            <Button
                android:id="@+id/po"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Prešov"
                android:layout_margin="2dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/zn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Žilina"
                android:layout_margin="2dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"/>

            <Button
                android:id="@+id/bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Banská Bystrica"
                android:layout_margin="2dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"/>

            <Button
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Trnava"
                android:layout_margin="2dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@xml/button_image_mesta"/>

        </TableRow>

    </TableLayout>


</RelativeLayout>
