<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.imhdsmslistok.InfoListok">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_podmienky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="@string/listok_info" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="naspäť"
            android:background="@android:color/transparent"
            android:textColor="@drawable/button_naspat"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            />

        </LinearLayout>

</RelativeLayout>
